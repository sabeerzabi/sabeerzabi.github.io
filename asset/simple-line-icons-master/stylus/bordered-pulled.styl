// Bordered & Pulled
// -------------------------

.{$sli-css-prefix}-border
	padding .2em .25em .15em
	border solid .08em $sli-border-color
	border-radius .1em

// Note: The below rules require braces to be properly compiled by Stylus
.{$sli-css-prefix}-pull-left {
  float left
}

.{$sli-css-prefix}-pull-right {
  float right
}

.{$sli-css-prefix} {
  &.{$sli-css-prefix}-pull-left {
    margin-right .3em
  }

  &.{$sli-css-prefix}-pull-right {
    margin-left .3em
  }
}

/*! Deprecated as of 4.4.0 */
.pull-right
	float right

.pull-left
	float left

.{$sli-css-prefix}
	&.pull-left
		margin-right .3em

	&.pull-right
		margin-left .3em
