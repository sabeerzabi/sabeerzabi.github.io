// Rotated & Flipped Icons
// -------------------------

.{$sli-css-prefix}-rotate-90
  sli-icon-rotate(90deg, 1)

.{$sli-css-prefix}-rotate-180
  sli-icon-rotate(180deg, 2)

.{$sli-css-prefix}-rotate-270
  sli-icon-rotate(270deg, 3)

.{$sli-css-prefix}-flip-horizontal
  sli-icon-flip(-1, 1, 0)

.{$sli-css-prefix}-flip-vertical
  sli-icon-flip(1, -1, 2)

// Hook for IE8-9
// -------------------------

:root .{$sli-css-prefix}-rotate-90,
:root .{$sli-css-prefix}-rotate-180,
:root .{$sli-css-prefix}-rotate-270,
:root .{$sli-css-prefix}-flip-horizontal,
:root .{$sli-css-prefix}-flip-vertical
  filter none
